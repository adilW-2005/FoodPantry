{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "FoodPantryS3Access",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:GetObject",
                "s3:DeleteObject",
                "s3:ListBucket",
                "s3:GetBucketLocation",
                "s3:PutObjectAcl",
                "s3:GetObjectAcl"
            ],
            "Resource": [
                "arn:aws:s3:::food-pantry-files",
                "arn:aws:s3:::food-pantry-files/*"
            ]
        }
    ]
} 